Bluepill.application('logstash') do |app|
  app.uid = 'root'
  app.gid = 'root'
  app.process('logstash') do |process|
    process.start_command = 'java -jar <%=@logstash-%> agent -f <%=@config-%>'
    process.pid_file = '/var/run/logstash-agent.pid'
    process.daemonize = true
    process.working_dir = '<%=@home-%>'
  end
end
