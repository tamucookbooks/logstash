Bluepill.application('logstash-web') do |app|
  app.uid = '<%=@logstash_user-%>'
  app.gid = '<%=@logstash_group-%>'
  app.process('logstash-web') do |process|
    process.start_command = 'java -jar <%=@logstash-%> web'
    process.pid_file = '<%=@pidfile-%>'
    process.daemonize = true
    process.working_dir = '<%=@home-%>'
  end
end
