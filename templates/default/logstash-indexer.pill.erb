Bluepill.application('logstash-indexer') do |app|
  app.uid = '<%=@logstash_user-%>'
  app.gid = '<%=@logstash_group-%>'
  app.process('logstash-indexer') do |process|
    process.start_command = 'java -jar <%=@logstash-%> agent -f <%=@indexer-%>'
    process.pid_file = '<%=@pidfile-%>'
    process.daemonize = true
    process.working_dir = '<%=@home-%>'
  end
end
