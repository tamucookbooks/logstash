description     "logstash indexer instance"

start on virtual-filesystems
stop on runlevel [06]

respawn
respawn limit 5 30
limit nofile 65550 65550

#env HOME=<%= @home %>

#env JAVA_OPTS='-Xms512m -Xmx512m'

chdir <%= @home %>
setuid <%= @user %>
setgid <%= @group %>
console log

script
  exec java -jar <%= @logstash %> agent -f <%= @config %> -l <%= @log %>
end script
